<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.balonmano.MainActivity"
    tools:ignore="MergeRootFrame" >
    
	 <LinearLayout
        android:id="@+id/canvasLayout"
        android:layout_width="match_parent"
        android:layout_height="404dp"
        android:orientation="vertical" >
 
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

            <Button
                android:id="@+id/L_Disc"
                style="@drawable/fdisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/B_Reset"
                android:layout_alignBottom="@+id/B_Reset"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/L_Cont"
                android:background="@drawable/fdisc"
                android:focusableInTouchMode="false"
                android:minHeight="30dp" />

            <Button
                android:id="@+id/L_Cont"
                style="@drawable/fcont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/L_Disc"
                android:layout_alignBottom="@+id/L_Disc"
                android:layout_alignParentRight="true"
                android:background="@drawable/fcont"
                android:focusableInTouchMode="false"
                android:minHeight="30dp" />

            <Button
                android:id="@+id/B_Reset"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="Inicial"
                android:textSize="18sp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/B_Reset"
                android:text="Mover" />

        </RelativeLayout >

</FrameLayout>

